@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Banner -->
<section class="hero-banner position-relative text-white text-center">
    <img src="~/images/banner.jpg" class="img-fluid w-100 banner-img" alt="Decoraciones FESTA">
    <div class="overlay"></div>
    <div class="banner-content position-absolute top-50 start-50 translate-middle">
        <h1 class="fw-bold display-4 mb-3 animate__animated animate__fadeInDown">
            ¡Haz de tu evento algo inolvidable con <span class="text-rosa">FESTA!</span>
        </h1>
        <p class="lead mb-4 animate__animated animate__fadeInUp">
            Decoración, mobiliario y detalles únicos para cada ocasión.
        </p>
        <a href="/Catalogo/Index" class="btn btn-lg btn-primary fw-bold shadow animate_animated animate__pulse animate__infinite">
            Ver Catálogo
        </a>
    </div>
</section>

<!-- Sección "¿Quiénes somos?" -->
<section class="container my-5 text-center">
    <h2 class="fw-bold text-rosa mb-4">¿Quiénes somos?</h2>
    <p class="lead text-muted">
        En <strong>FESTA</strong> convertimos momentos especiales en recuerdos inolvidables.
        Somos especialistas en <strong>decoración de eventos</strong>, <strong>renta de mobiliario</strong> y
        <strong>detalles personalizados</strong>.
    </p>
    <a href="/Home/QuienesSomos" class="btn btn-outline-primary mt-3">Conócenos más</a>
</section>

