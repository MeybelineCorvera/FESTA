@model IEnumerable<FESTA.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}

@if (TempData["ErrorMensaje"] != null)
{
    <div class="alert alert-danger text-center fw-semibold">
        @TempData["ErrorMensaje"]
    </div>
}

@if (TempData["ExitoMensaje"] != null)
{
    <div class="alert alert-success text-center fw-semibold">
        @TempData["ExitoMensaje"]
    </div>
}


<div class="container mt-5">
    <h2 class="text-center text-rosa mb-4">📂 Categorías</h2>

    <div class="text-end mb-3">
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva categoría
        </a>
    </div>

    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-rosa text-white">
            <tr>
                <th>Nombre</th>
                <th>Subcategorías</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td class="fw-bold">@categoria.Nombre</td>
                    <td>
                        @if (categoria.Subcategorias.Any())
                        {
                            <ul>
                                @foreach (var sub in categoria.Subcategorias)
                                {
                                    <li>@sub.Nombre</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@categoria.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
