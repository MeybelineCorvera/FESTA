@model FESTA.Models.Producto
@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="container mt-5 text-center">
    <h2 class="text-danger mb-4">⚠️ Confirmar eliminación</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title text-primary">@Model.Nombre</h4>
            <p class="card-text text-muted">@Model.Descripcion</p>
            <p><strong>Precio:</strong> $@Model.Precio</p>
            <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded-3 mb-3" style="max-height: 250px;" />

            <div class="alert alert-warning">
                ¿Estás seguro de que deseas eliminar este producto? Esta acción no se puede deshacer.
            </div>

            <form asp-action="Eliminar" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Sí, eliminar</button>
                <a asp-controller="Admin" asp-action="Panel" class="btn btn-secondary px-4 ms-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>
